{
  "include": [
    "src",
    "ambient.d.ts",
    // Hmm - I needed this to get autosense working
    // in the test files...
    // "test"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "coverage"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ],
      // "local/domain/*": [ "src/domain/*"],
      // "local/handlers/*": ["src/server/handlers/*"]
      "@local/domain/*": ["src/domain/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
